{
  "name": "workbot",
  "version": "2.0.0",
  "description": "WorkBot 企业微信机器人管理系统",
  "private": true,
  "scripts": {
    "dev": "next dev -p 5000",
    "dev:ws": "tsx watch server.ts",
    "build": "pnpm install && NEXT_TYPESCRIPT_SKIP_TYPE_CHECK=true NEXT_TYPESCRIPT_IGNORE_BUILD_ERRORS=true NEXT_DISABLE_ESLINT=true next build",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "check-env": "bash scripts/check-env.sh",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "monitor": "bash scripts/monitor.sh",
    "recovery": "bash scripts/recovery.sh",
    "diagnose": "bash scripts/diagnose.sh"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "coze-coding-dev-sdk": "^0.7.15",
    "drizzle-orm": "^0.45.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "nanoid": "^5.0.6",
    "next": "^15.0.0",
    "pg": "^8.18.0",
    "postgres": "^3.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^13.0.0",
    "ws": "^8.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
